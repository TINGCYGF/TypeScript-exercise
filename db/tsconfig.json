{
  //继承
  "extends": "./tsconfig.json",
  //继承可以覆盖，如：不排除
  "exclude": [],
  //保存文件自动编译（某些编辑器不支持）
  "compileOnSave": true,
  //
  "compilerOptions": {
    //存储编译信息，增量编译，增加编译速度
    "incremental": true,
    //配置存储信息文件
    "tsBuildInfoFile": "./buidFile",
    //打印诊断信息
    "diagnostics": true,

    //将多个配置文件生成一个文件，可以用在AMD模块
    "outFile": "./app.js",
    //生成模块标准
    "module": "AMD",
    //编译为js什么版本
    "target": "ES6",

    //TS需要引用的类库
    "lib": ["dom", "es5"],

    //允许编译js文件（js、jsx）
    "allowJs": true,
    //允许在JS文件中报错，通常与checkJs一起用
    "checkJs": true,
    //指定输出目录
    "outDir": "./out",
    //指定输入文件目录（用于输出）
    "rootDir": "./",

    //生成声明文件 和路径
    "declaration": true,
    "declarationDir": "./d",
    //只生成声明文件、不生成js文件
    "emitDeclarationOnly": true,
    //生成文件sourceMap
    "inlineSourceMap": true,
    //生成声明文件的 sourceMap
    "declarationMap": true,
    //加载声明文件目录，默认node_modules/@types
    "typeRoots": [],
    //需要加载声明文件包（单个）
    "types": [],

    //删除注释
    "removeComments": true,

    //不输出文件
    "noEmit": true,
    //错误时不输出文件
    "noEmitOnError": true,

    //不生成helper函数，需要额外安装ts-helpers
    "noEmitHelpers": true,
    //通过tslib引入helper函数，文件必须是模块
    "importHelpers": true,

    //降级遍历器实现（es3/5}）
    "downlevelIteration": true,

    //开启所有严格的类型检查
    "strict": true,
    //在代码中注入“use strict”
    "alwaysStrict": true,

    //在代码中注入“use strict”
    "alwaysStrict": true
  }
}